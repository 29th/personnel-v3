<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbr</th>
      <th>Path</th>
      <th>Order</th>
      <th>Game</th>
      <th>Timezone</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.abbr %></td>
        <td><%= unit.path %></td>
        <td><%= unit.order %></td>
        <td><%= unit.game %></td>
        <td><%= unit.timezone %></td>
        <td><%= unit.active %></td>
        <td><%= link_to 'Show', unit %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @units %>

<br>

<%= link_to 'New Unit', new_unit_path %>
