<p id="notice"><%= notice %></p>

<p>
  <strong>Datetime:</strong>
  <%= @event.datetime %>
</p>

<p>
  <strong>Unit:</strong>
  <%= @event.unit.name %>
</p>

<p>
  <strong>Type:</strong>
  <%= @event.type %>
</p>

<p>
  <strong>Mandatory:</strong>
  <%= @event.mandatory %>
</p>

<p>
  <strong>Report:</strong>
  <%= @event.report %>
</p>

<% if policy(@event).edit? %>
  <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-secondary' %>
<% end %>

<% if policy(@event).destroy? %>
  <%= link_to 'Destroy', @event, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', events_path, class: 'btn btn-outline-secondary' %>
