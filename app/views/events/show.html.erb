<% content_for(:html_title) { @event.title } %>

<article>
  <h1><%= @event.title %></h1>
  
  <dl>
    <dt>Datetime</dt>
    <dd><%= @event.datetime %></dd>

    <dt>Unit</dt>
    <dd><%= @event.unit.name %></dd>

    <dt>Type</dt>
    <dd><%= @event.type %></dd>

    <dt>Mandatory</dt>
    <dd><%= @event.mandatory %></dd>

    <dt>Report</dt>
    <dd><%= @event.report %></dd>
  </dl>

  <% if policy(@event).edit? %>
    <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-secondary' %>
  <% end %>

  <% if policy(@event).destroy? %>
    <%= link_to 'Destroy', @event, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

  <%= link_to 'Back', events_path, class: 'btn btn-outline-secondary' %>
</article>
